<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_medium">

        <ImageView
            android:layout_marginTop="@dimen/margin_small"
            android:id="@+id/image_icon"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="@dimen/margin_small"
            app:layout_constraintTop_toBottomOf="@+id/image_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/label_customer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Name:"/>

        <TextView
            android:id="@+id/edittext_customer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/label_customer_name"
            tools:text="Praneetha Duggirala"
            android:textSize="@dimen/margin_large"
            />

        <TextView
            android:layout_marginTop="@dimen/margin_small"
            app:layout_constraintTop_toBottomOf="@+id/edittext_customer_name"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/label_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number:"/>

        <TextView
            android:id="@+id/edittext_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/label_phone_number"
            tools:text="9885658982"
            android:textSize="@dimen/margin_large"
            />

        <TextView
            android:layout_marginTop="@dimen/margin_small"
            app:layout_constraintTop_toBottomOf="@+id/edittext_phone_number"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/label_vehicle_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vehicle Number:"/>

        <TextView
            android:id="@+id/edittext_vehicle_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/label_vehicle_number"
            tools:text="TS 08 GE 8403"
            android:textSize="@dimen/margin_large"
            />

        <TextView
            android:layout_marginTop="@dimen/margin_small"
            app:layout_constraintTop_toBottomOf="@+id/edittext_vehicle_number"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/label_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Active work orders available:"/>

        <TextView
            android:id="@+id/edittext_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/label_model"
            tools:text="Yes"
            android:textSize="@dimen/margin_large"
            />

        <Button
            android:layout_marginTop="@dimen/margin_medium"
            app:layout_constraintTop_toBottomOf="@+id/edittext_model"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/button_call_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call Customer"
            android:onClick="CallCustomer"/>

        <Button
            android:layout_marginTop="@dimen/margin_medium"
            app:layout_constraintTop_toBottomOf="@+id/button_call_customer"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/button_schedule_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Schedule Service"
            android:onClick="ScheduleService"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>